@model Northwind.Web.Helpers.Breadcrumb
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @for (int i = 0; i < Model.Names.Length; i++)
        {
            if (i == Model.Names.Length-1)
            {
                <li class="breadcrumb-item">@Model.Names[i]</li>
            }
            else
            {
                <li class="breadcrumb-item active"><a asp-action="@Model.Names[i]">@Model.Names[i]</a></li>
            }

        }
    </ol>
</nav>
